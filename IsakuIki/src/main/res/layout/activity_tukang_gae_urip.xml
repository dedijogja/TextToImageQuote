<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ce3995">

    <LinearLayout
        android:padding="2dp"
        android:layout_above="@+id/areaTombolKecil"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <info.isakuiki.babu.KotakAsMin
            android:background="#9B59B6"
            android:id="@+id/kotakLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/gbrGaeUrip"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textGaeUrip"
                    android:textColor="#ecf0f1"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:alpha=".4"
                android:src="@drawable/logo"
                android:visibility="gone"
                android:id="@+id/gbrTTD"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"/>
        </info.isakuiki.babu.KotakAsMin>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:layout_above="@+id/areaMenu"
        android:id="@+id/areaTombolKecil"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <SeekBar
            android:layout_marginRight="10dp"
            android:id="@+id/seekbarTukangGaeUrip"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="49" />
        <ImageView
            android:id="@+id/savegaeUrip"
            android:src="@drawable/save"
            android:layout_marginRight="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/shareGaeUrip"
            android:src="@drawable/share"
            android:layout_marginRight="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/setAsGauUrip"
            android:src="@drawable/set"
            android:layout_marginRight="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <LinearLayout
        android:background="#F1A9A0"
        android:id="@+id/areaMenu"
        android:layout_above="@+id/iklanGaeUrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <info.isakuiki.babu.KotakAsLebar
            android:id="@+id/bawahUbahText"
            android:background="#446CB3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:layout_margin="3dp"
                    android:src="@drawable/ubah_text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:background="#4183D7"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:text="Ubah Text"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </info.isakuiki.babu.KotakAsLebar>
        <info.isakuiki.babu.KotakAsLebar
            android:id="@+id/bawahWarnaText"
            android:background="#446CB3"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:layout_margin="3dp"
                    android:src="@drawable/warna_text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:background="#4183D7"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:text="Warna Text"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </info.isakuiki.babu.KotakAsLebar>
        <info.isakuiki.babu.KotakAsLebar
            android:id="@+id/bawahTextStyle"
            android:background="#446CB3"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:layout_margin="3dp"
                    android:src="@drawable/text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:background="#4183D7"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:text="Text Style"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </info.isakuiki.babu.KotakAsLebar>
        <info.isakuiki.babu.KotakAsLebar
            android:id="@+id/bawahPresetBG"
            android:background="#446CB3"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:layout_margin="3dp"
                    android:src="@drawable/preset_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:background="#4183D7"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:text="Preset BG"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </info.isakuiki.babu.KotakAsLebar>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/iklanGaeUrip"
        android:layout_marginTop="5dp"
        android:background="#8E44AD"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:orientation="horizontal" />
</RelativeLayout>
